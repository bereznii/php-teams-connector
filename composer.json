{
    "name": "bereznii/php-teams-connector",
    "type": "library",
    "description": "This package is used to easily interact with Microsoft Teams Connector API via Incoming Webhook, allowing to create notification channel",
    "keywords": [
        "bereznii",
        "php-teams-connector"
    ],
    "homepage": "https://github.com/bereznii/php-teams-connector",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmytro Bereznii",
            "email": "bereznii.d@gmail.com",
            "homepage": "https://bereznii.me",
            "role": "Software Developer, PHP"
        }
    ],
    "require": {
        "php": "~7.2",
        "symfony/var-dumper": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Bereznii\\TeamsConnector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bereznii\\TeamsConnector\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
